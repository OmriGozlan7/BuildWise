{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "ESNext",                         
    "moduleResolution": "Node",                 
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "skipLibCheck": true,                       
    "outDir": "dist",                           
    "rootDir": "src",                           
    "allowSyntheticDefaultImports": true,       
    "resolveJsonModule": true                   
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules", "dist"]
}
